{
  "name": "yet-another-redis-cache",
  "version": "0.1.0",
  "description": "(Yet another) Redis backed caching service with ttl support and bulk getter/setter",
  "main": ".build/src/index.js",
  "types": ".build/src/index.d.ts",
  "files": [
    ".build/src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "rm -rf .build && tsc && cp -rf ./src/@types .build/src/",
    "watch": "tsc -w",
    "lint": "eslint src -f table",
    "format": "prettier --write './**/*.ts'",
    "docs": "yarn docs:clean && typedoc --out docs/ src/**/*.ts && touch ./docs/.nojekyll",
    "docs:clean": "rm -rf ./docs",
    "docker:flush": "redis-cli -h localhost -p 56379 flushall || true",
    "test": "yarn docker:flush && jest --runInBand --detectOpenHandles --coverage=true",
    "test:ci": "jest --runInBand --detectOpenHandles --coverage=true",
    "test:fast": "yarn docker:flush && TEST_FAST=true jest --runInBand --detectOpenHandles --coverage=false"
  },
  "author": "Markus Velten",
  "repository": "https://github.com/slippyex/yet-another-redis-cache",
  "license": "MIT",
  "private": false,
  "keywords": [
    "redis",
    "cache",
    "store",
    "scalable",
    "Serialization"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": false,
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "error"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-formatter-table": "^7.32.1",
    "jest": "^29.4.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.24"
  },
  "pre-commit": [
    "format",
    "lint",
    "build",
    "test"
  ],
  "prettier": {
    "parser": "typescript",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "tabWidth": 4,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "redis": "^4.6.4",
    "typescript": "^4.9.5"
  }
}
